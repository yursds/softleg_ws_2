<?xml version="1.0"?>
<robot name="softleg" xmlns:xacro="http://www.ros.org/wiki/xacro">

    <!-- Properties -->
    <xacro:property name="const_pi" value="3.1415926535897931"/>
    <xacro:property name="cart_mass" value="0.0181"/>
    <xacro:property name="base_mass" value="0.0256"/>
    <xacro:property name="thigh_mass" value="0.0177"/>
    <xacro:property name="calf_mass" value="0.0177"/>
    <xacro:property name="velocity" value="100" />
    <xacro:property name="effort" value="100" />

    <xacro:property name="max_stiffness" value="10"/>
    <xacro:property name="min_stiffness" value="0"/>
    <xacro:property name="rate_stiffness" value="20"/>

    <!-- Gazebo and Transmission -->
    <!-- <xacro:include filename="$(find softleg_description)/urdf/softleg.gazebo.xacro"/> -->
    <!-- <xacro:include filename="$(find softleg_description)/urdf/softleg.transmission.xacro"/> -->

    <!-- Utilities -->
    <!-- <xacro:include filename="$(find softleg_description)/urdf/softleg_inertia.xacro"/> -->
    <xacro:include filename="package://softleg_description/urdf/softleg_inertia.xacro"/>
    <xacro:include filename="package://softleg_description/urdf/softleg_materials.xacro"/>

    <!-- <xacro:include filename="$(find softleg_description)/urdf/softleg_materials.xacro"/> -->

    <!-- URDF -->
    <xacro:macro name="softleg" params="parent name *origin">
    <!-- params="parent name *origin"> -->
        
        <link name="world">
        </link>
        <!-- 0) Cart link - fixed to parent. -->
        <joint name="world_${name}_fixed_joint" type="fixed">
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <parent link="world"/>
            <child link="${name}_cart_link"/>
        </joint>

        <link name="${name}_cart_link">
            <inertial>
                <xacro:insert_block name="really_negligible_inertia"/>
            </inertial>
            <visual>
                <origin xyz="0 0 0" rpy="0 0 ${180 * const_pi / 180}"/>
                <geometry>
                    <mesh filename="package://softleg_description/meshes/cart.dae"
                          scale=" .001 .001 .001"/>
                </geometry>
                <material name="SoftLeg/Grey"/>
            </visual>
            <collision>
                <origin xyz="0.01 0 0" rpy="0 0 0"/>
                <geometry>
                    <box size="0.03 0.029 0.008"/>
                </geometry>
            </collision>
        </link>

        <!-- 1) Base link - moves along cart -->
        <joint name="${name}_cart_joint" type="prismatic">
            <origin xyz="0 -0.01 0" rpy="${90 * const_pi / 180} ${0 * const_pi / 180} ${90 * const_pi / 180}"/>
            <axis xyz="0 1 0"/>
            <limit lower="0" upper="5" effort="${effort}" velocity="${velocity}"/>
            <dynamics friction="0.0001" damping="0.0001"/>
            <parent link="${name}_cart_link"/>
            <child link="${name}_base_link"/>
        </joint>

        <link name="${name}_base_link">
            <inertial>
                <mass value="${base_mass}"/>
                <origin xyz="0.0356 -0.0011 -0.0078" rpy="0 0 0"/>
                <xacro:base_inertia/>
            </inertial>
            <visual>
                <origin xyz="0 0 0" rpy="0 0 0"/>
                <geometry>
                    <mesh filename="package://softleg_description/meshes/base.dae"
                          scale=" .001 .001 .001"/>
                </geometry>
                <material name="SoftLeg/Grey"/>
            </visual>
            <collision>
                <origin xyz="0.01 0 0" rpy="0 0 0"/>
                <geometry>
                    <box size="0.03 0.029 0.008"/>
                </geometry>
            </collision>
            <collision>
                <origin xyz="0.0365 0 -0.00375" rpy="0 0.3 0"/>
                <geometry>
                    <box size="0.0275 0.025 0.008"/>
                </geometry>
            </collision>
            <collision>
                <origin xyz="0.05525 0 -0.0142" rpy="0 0.75 0"/>
                <geometry>
                    <box size="0.021 0.021 0.009"/>
                </geometry>
            </collision>
            <collision>
                <origin xyz="0.0605 0 -0.025" rpy="0 1.57 0"/>
                <geometry>
                    <cylinder length="0.0125" radius="0.0075"/>
                </geometry>
            </collision>
        </link>

        <!-- 1) Thigh link - rotates w.r.t base -->
        <joint name="${name}_hip_joint" type="revolute">
            <origin xyz="0.255 0 0.07" rpy="${90 * const_pi / 180} 0 0"/>
            <axis xyz="0 1 0"/>
            <limit lower="${-180 * const_pi / 180}" upper="${180* const_pi / 180}" effort="${effort}" velocity="${velocity}"/>
            <dynamics friction="0.0001" damping="0.0001"/>
            <parent link="${name}_base_link"/>
            <child link="${name}_thigh_link"/>
        </joint>

        <link name="${name}_thigh_link">
            <inertial>
                <mass value="${thigh_mass}"/>
                <origin xyz="0.0356 -0.0011 -0.0078" rpy="0 0 0"/>
                <xacro:thigh_inertia/>
            </inertial>
            <visual>
                <origin xyz="0.073 0 0" rpy="0 0 0"/>
                <geometry>
                    <mesh filename="package://softleg_description/meshes/thigh.dae"
                          scale=" .001 .001 .001"/>
                </geometry>
                <material name="SoftLeg/Grey"/>
            </visual>
            <collision>
                <origin xyz="0.01 0 0" rpy="0 0 0"/>
                <geometry>
                    <box size="0.03 0.029 0.008"/>
                </geometry>
            </collision>
            <collision>
                <origin xyz="0.0365 0 -0.00375" rpy="0 0.3 0"/>
                <geometry>
                    <box size="0.0275 0.025 0.008"/>
                </geometry>
            </collision>
            <collision>
                <origin xyz="0.05525 0 -0.0142" rpy="0 0.75 0"/>
                <geometry>
                    <box size="0.021 0.021 0.009"/>
                </geometry>
            </collision>
            <collision>
                <origin xyz="0.0605 0 -0.025" rpy="0 1.57 0"/>
                <geometry>
                    <cylinder length="0.0125" radius="0.0075"/>
                </geometry>
            </collision>
        </link>

        <!-- 1) Calf link - rotates w.r.t thigh -->
        <joint name="${name}_knee_joint" type="revolute">
            <origin xyz="0.175 0.0275 0" rpy="${90 * const_pi / 180} 0 0"/>
            <axis xyz="0 0 -1"/>
            <limit lower="${-180 * const_pi / 180}" upper="${180* const_pi / 180}" effort="${effort}" velocity="${velocity}"/>
            <dynamics friction="0.0001" damping="0.0001"/>
            <parent link="${name}_thigh_link"/>
            <child link="${name}_calf_link"/>
        </joint>

        <link name="${name}_calf_link">
            <inertial>
                <mass value="${calf_mass}"/>
                <origin xyz="0.0356 -0.0011 -0.0078" rpy="0 0 0"/>
                <xacro:calf_inertia/>
            </inertial>
            <visual>
                <origin xyz="0 0 0" rpy="0 0 0"/>
                <geometry>
                    <mesh filename="package://softleg_description/meshes/calf.dae"
                          scale=" .001 .001 .001"/>
                </geometry>
                <material name="SoftLeg/Grey"/>
            </visual>
            <collision>
                <origin xyz="0.01 0 0" rpy="0 0 0"/>
                <geometry>
                    <box size="0.03 0.029 0.008"/>
                </geometry>
            </collision>
            <collision>
                <origin xyz="0.0365 0 -0.00375" rpy="0 0.3 0"/>
                <geometry>
                    <box size="0.0275 0.025 0.008"/>
                </geometry>
            </collision>
            <collision>
                <origin xyz="0.05525 0 -0.0142" rpy="0 0.75 0"/>
                <geometry>
                    <box size="0.021 0.021 0.009"/>
                </geometry>
            </collision>
            <collision>
                <origin xyz="0.0605 0 -0.025" rpy="0 1.57 0"/>
                <geometry>
                    <cylinder length="0.0125" radius="0.0075"/>
                </geometry>
            </collision>
        </link>

        <!-- Gazebo elements -->
        <!-- <xacro:softleg_gazebo name="${name}"/>
        <xacro:softleg_transmission name="${name}"/> -->

    </xacro:macro>

</robot>
